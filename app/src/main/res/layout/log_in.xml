<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_tran_light"
    android:layout_width="400dp"
    android:layout_height="360dp"
    android:id="@+id/log_in_part"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_first_line"
        android:layout_width="330dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_second_line"
        app:layout_constraintVertical_bias="0.352">

        <ImageView
            android:id="@+id/login_first_line_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/user"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_first_line_user_text"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/login_first_line_user_text"
            android:layout_width="240dp"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/login_first_line_user_image"
            android:hint="请输入用户名"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="20"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_second_line"
        android:layout_width="330dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_first_line"
        app:layout_constraintBottom_toTopOf="@id/login_third_line"
        app:layout_constraintVertical_bias="0.352">

        <ImageView
            android:id="@+id/login_second_line_password_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/password"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_second_line_password_text"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/login_second_line_password_text"
            android:layout_width="240dp"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/login_second_line_password_image"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="20"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_third_line"
        android:layout_width="330dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_second_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.352">

        <Button
            android:id="@+id/login_button"
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="登录"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/grey_tran"
            android:padding="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>