<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditNote"
    android:background="@drawable/light_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_one_note_first_line"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_one_note_title">

        <ImageButton
            android:id="@+id/edit_title_back"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/edit_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/edit_title_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="165dp"
            android:background="@drawable/edit_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/edit_title_back"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/edit_title_image"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/edit_picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/edit_title_save"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/edit_title_audio"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/edit_audio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/edit_title_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/edit_title_video"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/edit_video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toEndOf="@id/edit_title_audio"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edit_one_note_title"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="标题"
        android:inputType="text"
        android:maxLength="40"
        android:maxLines="1"
        android:textSize="26sp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_one_note_first_line"
        app:layout_constraintBottom_toTopOf="@+id/edit_one_note_item_list"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/edit_one_note_item_list"
        android:layout_width="380dp"
        android:layout_height="600dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_one_note_title"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>